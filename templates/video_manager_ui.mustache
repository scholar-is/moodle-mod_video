{{!
    @template mod_video/video_manager_ui

    Template for video manager UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * uniqueid

    Example context (json):
    {
        "uniqueid": "123"
    }
}}

<div id="video-manager-{{uniqueid}}">
    <div class="input-group mb-3">
        <input type="text" name="search-videos-value" class="form-control" placeholder="{{#str}}searchforvideos, mod_video{{/str}}" aria-label="{{#str}}searchforvideos, mod_video{{/str}}">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary search-videos-button" type="button" title="{{#str}}search{{/str}}">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
    <div class="loading-icon-container hidden text-center">
        <i class="fa-solid fa-circle-notch fa-spin fa-2x"></i>
    </div>
    <div class="row row-cols-1 row-cols-md-2 video-results-container">

    </div>
    <p class="text-muted">{{#str}}topresults, mod_video{{/str}}</p>
</div>
