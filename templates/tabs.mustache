{{!
    @template mod_video/tabs

    Template for tabs.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * tabs - Data for all tabs.

    Example context (json):
    {
        "tabs": [
            {
                "name": "mytab",
                "title": My tab",
                "active": true,
                "content": "<div></div>"
            }
        ],
    }
}}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    {{#tabs}}
        <li class="nav-item">
            <a class="nav-link {{#active}}active{{/active}}" id="{{name}}-tab" data-toggle="tab" href="#{{name}}-tab-link" role="tab" aria-controls="{{name}}" aria-selected="{{#active}}true{{/active}}">{{title}}</a>
        </li>
    {{/tabs}}
</ul>
<div class="tab-content" id="myTabContent">
    {{#tabs}}
        <div class="tab-pane fade {{#active}}show active{{/active}}" id="{{name}}-tab-link" role="tabpanel" aria-labelledby="{{name}}-tab">{{{content}}}</div>
    {{/tabs}}
</div>